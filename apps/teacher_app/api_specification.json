          "response_success": {
            "success": true,
            "statuscode": 200,
            "data": [
              {
                "id": "string",
                "title": "string",
                "subtitle": "string",
                "dueDate": "datetime",
                "status": "string"
              }
            ],
            "message": "تم جلب الواجبات بنجاح"
          }
        },
        {
          "method": "GET",
          "path": "/notifications",
          "description": "جلب الإشعارات",
          "response_success": {
            "success": true,
            "statuscode": 200,
            "data": [
              {
                "id": "string",
                "title": "string",
                "subtitle": "string",
                "timestamp": "datetime",
                "isRead": "boolean"
              }
            ],
            "message": "تم جلب الإشعارات بنجاح"
